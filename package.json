{
  "name": "node-bcc",
  "version": "2.2.1",
  "description": "A simple Block Check Character library.",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "scripts": {
    "test": "nyc mocha",
    "codecov": "codecov -f coverage/coverage-final.json",
    "doc": "typedoc",
    "release": "standard-version && git push --follow-tags origin master && npm publish",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc -p .",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyerleinf/node-bcc.git"
  },
  "keywords": [
    "node",
    "typescript",
    "block",
    "check",
    "character",
    "bcc"
  ],
  "author": "Fabian Beyerlein",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/beyerleinf/node-bcc/issues"
  },
  "homepage": "https://github.com/beyerleinf/node-bcc#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.26",
    "@types/sinon": "^7.0.6",
    "chai": "^4.2.0",
    "codecov": "^3.2.0",
    "gts": "^0.9.0",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "sinon": "^7.3.2",
    "source-map-support": "^0.5.10",
    "standard-version": "^4.4.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typedoc": "^0.14.2",
    "typescript": "~3.1.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html",
      "json"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
